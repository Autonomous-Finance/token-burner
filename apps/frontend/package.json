{
  "name": "counter-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "VITE_APP_VER=`npm pkg get version` VITE_GIT_HASH=`git rev-parse HEAD` vite --port 3000 --host",
    "build": "VITE_APP_VER=`npm pkg get version` VITE_GIT_HASH=`git rev-parse HEAD` vite build",
    "generate-env": "bun scripts/generate-env.ts",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "dotenv -- ./scripts/deploy.sh",
    "preview": "vite preview"
  },
  "dependencies": {
    "@nanostores/persistent": "^0.10.2",
    "@nanostores/react": "^0.8.0",
    "@permaweb/aoconnect": "^0.0.56",
    "@tanstack/react-query": "^5.51.9",
    "arweave-wallet-kit": "^1.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zod-error": "^1.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "typescript": "^5.2.2",
    "dotenv": "^16.4.5",
    "vite": "^5.3.4"
  }
}
