{
  "name": "token-burner",
  "type": "module",
  "scripts": {
    "backend:deploy": "cd ./ao/backend && ./scripts/deploy.sh",
    "backend:test": "cd ./ao/backend && ./scripts/test.sh",
    "backend:build": "cd ./ao/backend && ./scripts/build.sh",
    "backend:inject": "STATE_FILE=./ao/backend/state-processes.yaml node ./utils/inject-process.js",
    "frontend:dev": "cd ./apps/frontend && npm run dev",
    "frontend:build": "cd ./apps/frontend && npm run build",
    "frontend:deploy": "cd ./apps/frontend && npm run deploy",
    "postinstall": "chmod +x ./ao/backend/scripts/* && chmod +x ./apps/frontend/scripts/*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "aoform": "latest",
    "yaml": "^2.4.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "ao/*"
  ]
}
